@model Projet_Tech_Pag_Con.Models.ExecutionMethode

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Details</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-image: url('https://livetechspot.com/wp-content/uploads/2020/07/Complete-Guide-List-on-How-to-Optimize-E-commerce-Website.jpg');
            background-size: cover;
            background-position: center;
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
        }

        h1 {
            text-align: center;
            color: #333;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
            margin-top: 0;
        }

        .row {
            margin-bottom: 15px;
        }

        dt {
            font-weight: bold;
        }

        dd {
            margin-left: 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Details de Simulation</h1>

        <div>
            <!--<h4>Execution Methode</h4>-->
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NomMethode)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NomMethode)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Details)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Details)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Performance)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Performance)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.MatriceConfusion)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.MatriceConfusion)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Temps_Execution)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Temps_Execution)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SimulationId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SimulationId)
