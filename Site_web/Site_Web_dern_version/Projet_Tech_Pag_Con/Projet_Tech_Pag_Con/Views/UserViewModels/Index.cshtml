@model IEnumerable<Projet_Tech_Pag_Con.Models.UserViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="user-profiles">
    @foreach (var user in Model)
    {
        <div class="user-profile">
            <div class="user-photo">
                <img src="https://picsum.photos/150/150?random=@user.UserId" alt="User Photo" />
            </div>
            <div class="user-details">
                <h4>@user.Email</h4>
                <div class="detail-item">
                    <span class="detail-label">User ID:</span>
                    <span class="detail-value">@user.UserId</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Phone Number:</span>
                    <span class="detail-value">@user.PhoneNumber</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Role:</span>
                    <span class="detail-value">@user.Role</span>
                </div>
                <div class="user-actions">
                    <a href="@Url.Action("Edit", "UserViewModels", new { id = user.UserId })">Edit</a>
                    <a href="@Url.Action("Details", "UserViewModels", new { id = user.UserId })">Details</a>
                    <a href="@Url.Action("Delete", "UserViewModels", new { id = user.UserId })">Delete</a>
                </div>
            </div>
        </div>
        <div class="user-space"></div> <!-- Espacement entre les utilisateurs -->
    }
</div>

<style>
    body {
        background-image: url('https://img.freepik.com/photos-gratuite/fond-noir-blanc-ondule_23-2150530922.jpg?t=st=1717037698~exp=1717041298~hmac=452300f8f38b62b2bd65008966f9bf20e3c814f2383e1f5d46a1a0867e7699ef');
        background-size: cover;
        background-repeat: no-repeat;
        font-family: Arial, sans-serif;
    }

    .user-profiles {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .user-profile {
        display: flex;
        background-color: rgba(255, 255, 255, 0.8);
        padding: 20px;
        border-radius: 10px;
    }

    .user-photo img {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        margin-right: 20px;
    }

    .user-details {
        flex-grow: 1;
    }

    .detail-item {
        margin-bottom: 8px;
    }

    .detail-label {
        font-weight: bold;
    }

    .detail-value {
        display: block;
        max-width: 200px;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
    }

    .user-actions a {
        display: inline-block;
        margin-right: 10px;
    }

    .user-space {
        height: 40px;
    }
</style>
